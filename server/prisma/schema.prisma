datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  username     String       @unique
  passwordHash String
  displayName  String?
  avatarUrl    String?
  createdAt    DateTime     @default(now())

  savedMemes   SavedMeme[]
}

model SavedMeme {
  id        Int      @id @default(autoincrement())
  memeId    String
  title     String
  imageUrl  String
  source    String?
  subreddit String?
  author    String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  @@unique([userId, memeId])
}